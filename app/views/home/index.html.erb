<script>
  document.addEventListener("DOMContentLoaded", function() {
    const splide = new Splide('#image-carousel', {
      type: 'loop',
      perPage: 3,
      perMove: 1,
      gap: 30,
      arrows: false,
      pagination: false,
      breakpoints: {
        640: {
          perPage: 2,
          gap: 10,
        },
        1024: {
          perPage: 2,
          gap: 20,
        },
      },
    }).mount();
    
    document.querySelector('#prevSlide').addEventListener('click', () => {
      splide.go('<');
    });

    document.querySelector('#nextSlide').addEventListener('click', () => {
      splide.go('>');
    });
  });
</script>
